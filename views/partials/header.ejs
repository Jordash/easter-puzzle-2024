        $('.puzzle-cover').on('click', function(){
          let pieces = $('.piece').length;
          console.log("pieces: ",pieces);
          if (pieces === 0) {
            $(this).fadeOut('slow');
          }
        });
        $('.show-menu-label, .hide-menu-label').on('click', function(){
          $('.show-menu-label').toggle();
          $('.hide-menu-label').toggle();
          $('.direct-link-container').toggle();
